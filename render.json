{
  "buildCommand": "npm install && cd packages/backend && npm run build",
  "startCommand": "node packages/backend/dist/server.js",
  "envVars": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "PORT",
      "value": "3001"
    },
    {
      "key": "MONGODB_URI",
      "value": "YOUR_MONGODB_CONNECTION_STRING"
    },
    {
      "key": "JWT_SECRET",
      "value": "YOUR_JWT_SECRET_MIN_32_CHARS"
    },
    {
      "key": "CORS_ORIGINS",
      "value": "YOUR_FRONTEND_URL"
    }
  ]
}
