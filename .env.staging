# DreamCraft Staging Environment Variables
# Copy this to .env.staging and fill in actual values

PORT=3001
NODE_ENV=staging

# Database - Use MongoDB Atlas for staging
MONGODB_URI=mongodb+srv://staging_user:staging_password@cluster.mongodb.net/dreamcraft-staging

# Authentication
JWT_SECRET=your-staging-jwt-secret-change-this-to-random-32-char-string

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_staging_key_here
OPENAI_API_KEY=sk-your-openai-staging-key-here

# CORS - Restrict to staging domain
CORS_ORIGINS=https://staging.dreamcraft.app,https://staging-api.dreamcraft.app

# Security
NODE_ENV=staging
LOG_LEVEL=info
